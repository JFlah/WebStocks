<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/stock_bgs"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jack.webstocks.ViewActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cameraButton"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:background="#ff1b00b8"
        android:text="Set Your Profile Photo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delSelectedButton"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:background="#ff1b00b8"
        android:layout_weight="1"
        android:text="Delete Selected"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delAllButton"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:background="#ff1b00b8"
        android:layout_weight="1"
        android:text="Delete All"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/researchButton"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:background="#ff1b00b8"
        android:text="Research Stock (1)"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0900"
        android:textSize="18sp"
        android:id="@+id/error"/>

    <ListView
        android:id="@+id/favLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#878787"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"></ListView>

</LinearLayout>
